<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.noahblumenfeld.protoype_coursework.CourseIDSearchActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_column="1"
                    android:id="@+id/search_course_id"
                    android:hint="@string/enter_course_id_search"
                    />

                <Button
                    android:id="@+id/start_course_id_search"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_column="2"
                    android:text="@string/search_button"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:paddingLeft="5pt"
                    android:textSize="10pt"
                    android:layout_weight="1"
                    android:layout_column="1"
                    android:text="Book" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:textSize="10pt"
                    android:text="Condition" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:textSize="10pt"
                    android:text="Price($)" />


            </TableRow>

            <ListView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/post_listview_course_id">
            </ListView>


        </TableLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
